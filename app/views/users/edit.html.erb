<table class="table table-striped">
 <div class="col-lg-12" style="background-color: gray;">
<header>
<th><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "home", user_path(current_user), class: "home" %> </span></th>
<th><span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "users",  new_user_path, class: "users" %> </span></th>
<th><span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "book", books_path, class: "books" %></span></th>
<th><span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to 'logout', destroy_user_session_path, class: "logout", method: :delete %></span></th>
</header>
</div>
</table>
<p>ユーザー登録情報の変更</p>

<%= notice %>

<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
    <div class="form-group has-icon">
    <div class="user-edit-image">
    <%= attachment_image_tag @user, :image, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: '100x100' %>
    </div>
    <label class="control-label sr-only" for="inputEmail">Image</label>
    <%= f.attachment_field :image, placeholder: "プロフィール画像", class: "user_image" %>
    <h4>名前</h4>
    <%= f.text_field :name, class: "name" %>
    <h4>プロフィール</h4>
    <%= f.text_area :profile, class: "introduction" %>
    <br>
    <%= f.submit '確定' %>
    <% end %>
</div>
