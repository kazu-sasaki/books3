<table class="table table-striped">
 <div class="col-lg-12" style="background-color: gray;">
<header>
<th><span class="glyphicon glyphicon-home" aria-hidden="true"><%= link_to "home", user_path(current_user), class: "home" %> </span></th>
<th><span class="glyphicon glyphicon-user" aria-hidden="true"><%= link_to "users",  new_user_path, class: "users" %> </span></th>
<th><span class="glyphicon glyphicon-book" aria-hidden="true"><%= link_to "book", books_path, class: "books" %></span></th>
<th><span class="glyphicon glyphicon-log-out" aria-hidden="true"><%= link_to 'logout', destroy_user_session_path, class: "logout", method: :delete %></span></th>
</header>
</div>
</table>

  <div class="container"> <!-- ここを追加 -->
      <div class="row">
          <div class="col-lg-4" style="background-color: orange;">

<table class="table table-striped">

<td>メイン画面</td>
<div class="messeage"><%= notice %></div>

<tbody>
<th><%= attachment_image_tag @user, :image, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: '100x100' %>
</th>
<th>名前</th>
<th><%= @user.name %></th>
<th>自己紹介</th>
<th><%= @user.profile %></th>

<br>
<th><%= link_to "登録情報の変更", edit_user_path(current_user.id), class: "edit_user_#{current_user.id}" %></th>
</tbody>

   <!--記事投稿-->
<p>記事投稿</p>

<% if @book.errors.any? %>,
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book) do |f| %>

       <h4>本のタイトル</h4>
       <%= f.text_field :title, class: "book_title" %>

       <h4>感想</h4>
       <%= f.text_area :body, class: "book_body" %><br>

       <%= f.submit '投稿' %>
<% end %>
</table>

      </div>
  </div>

</div>


<table class="table table-striped">
 <div class="col-lg-8" style="background-color: gray;">
    <thead>
    <tr>
      <th>user</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="5"></th>
    </tr>
    </thead>
<tbody>
<% @userbook.each do |userbook| %>
<tr>
<td><%= attachment_image_tag @user, :image, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: '50x50' %></td>
 <% if @user = current_user %>
 <% end %>

<td><%= link_to userbook.title, book_path(userbook), class: "book_#{userbook}" %> </td>
<td><%= userbook.body %></td>
<% end %>
</tr>
</tbody>
</div>
</table>
