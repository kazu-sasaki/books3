<%= render 'books/list' %>
<table class="table table-striped">
 <div class="col-lg-8" >
    <thead>
    <tr>
      <th>user</th>
      <th>title</th>
      <th>body</th>
    </tr>
    </thead>

<tbody>

  <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag book.user, :image, class: "img-circle pull-left profile-img", fallback: "no_image.jpg",size: '50x50' %></td>
      <td><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %> </td>
      <td><%= book.body %></td>
    </tr>
  <% end %>
</tbody>
</div>
   </table>
